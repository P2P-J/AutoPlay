{
  "manifest_version": 3,
  "name": "AutoPlay",
  "version": "1.0.0",
  "description": "강의가 끝나면 자동으로 다음 강의를 재생하는 확장 프로그램",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["AutoPlay.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "자동 강의 재생기"
  },
  "icons": {
    "16": "icon16.png",
    "64": "icon64.png",
    "128": "icon128.png"
  }
}
