{
  "manifest_version": 3,
  "name": "AutoPlay",
  "version": "1.2.0",
  "description": "An extension that automatically plays the next lecture when it ends.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["AutoPlay.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Automatic lecture player"
  },
  "icons": {
    "16": "icon16.png",
    "64": "icon64.png",
    "128": "icon128.png"
  }
}
